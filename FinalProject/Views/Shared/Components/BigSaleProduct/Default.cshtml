  @model List<BigSaleProductDto>

<div class="site-section block-8">
    <div class="container">
        @foreach(var bigsaleProduct in Model)
        {
            <div class="row justify-content-center  mb-5">
                <div class="col-md-7 site-section-heading text-center pt-4">
                    <h2>@bigsaleProduct.Title</h2>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-md-12 col-lg-7 mb-5">
                    <a href="#"><img src="@bigsaleProduct.ImageURL" alt="Image placeholder" class="img-fluid rounded"></a>
                </div>
                <div class="col-md-12 col-lg-5 text-center pl-md-5">
                    <h2><a href="#">@bigsaleProduct.DiscountInfo</a></h2>
                    
                    <p>@bigsaleProduct.Description</p>
                    <p><a href="@Url.Action("List", "DiscountProduct")" class="btn btn-primary btn-sm">@bigsaleProduct.Link</a></p>
                </div>
            </div>
        }
        
    </div>
</div>
