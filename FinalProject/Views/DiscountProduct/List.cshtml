@model List<ProductDto>
<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Endirimli Məhsullar</h2>
            </div>
        </div>
        <div class="row">
            
            <div class="col-md-12">
               
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var discountProduct in Model)
                    {
                          <div class="item">
                            <div class="block-4 text-center">
                                <figure class="block-4-image">
                                    <img src="@discountProduct.ImageURL" alt="Image placeholder" class="img-fluid">
                                </figure>
                                <div class="block-4-text p-4">
                                    <h3><a href="#">@discountProduct.Name</a></h3>
                                    <p class="mb-0">@discountProduct.Description</p>
                                    <p class="text-primary font-weight-bold"><s>@discountProduct.Price AZN</s></p>
                                    <p class="text-primary font-weight-bold">@discountProduct.DiscountedPrice AZN</p>

                                </div>
                            </div>
                        </div>   
                        }
                </div>
                
            </div>
            
        </div>
    </div>
</div>


